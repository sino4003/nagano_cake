<div class="container my-5">

  <div class="row">
    <h3 class="border rounded shadow-sm font-weight-bold px-3">ジャンル一覧・追加</h3>
  </div>

  <%= form_with model: @genre, url:admin_genres_path do |f| %>

  <div class="row mt-5">
    <div class="col-sm-6">
      <div class="form-group row">
        <%= f.label :ジャンル名, class: "col-sm-3" %>
        <%= f.text_field :name, class: "col-sm-5" %>
        <%= f.submit '新規登録', class: "btn btn-success ml-5" %>
      </div>
    </div>
  </div>
  <% end %>
  <div class="row mt-5">
    <div class="col-4">
      <table class="table table-bordered border-dark">
        <thead>
          <tr class="bg-secondary text-light">
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to '編集する',edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
          <tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>