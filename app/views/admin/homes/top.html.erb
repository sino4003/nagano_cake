<h5 class="mx-auto col-xl-9 mt-5 mb-4 row">注文履歴一覧</h5>
<div class="mx-auto col-xl-9">
<table class="table table-hove">
    <thead>
        <tr class="table-active">
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
        </tr>
    </thead>
    <tbody>
    <% @orders.each do |order| %>
        <tr>
            <td>
                <%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"), admin_order_path(order.id) %>
            </td>
            <td><%= order.name %></td>
            <td><%= order.order_details.sum(:amount) %></td>
            <td><%= order.status_i18n %></td>
        </tr>
    </tbody>
    <% end %>
</table>
</div>
<div class="mx-auto col-xl-1">
    <%= paginate @orders %>
</div>