<div class="container my-5">

  <div class="row">
    <h3 class="border rounded shadow-sm font-weight-bold px-3">商品編集</h3>
  </div>

  <%= form_with model: @item, url:admin_item_path do |f| %>

    <div class="row mt-5">
      <div class="col-sm-5">
        <div class="form-group row">
          <%= f.label :商品画像, class: "col-sm-4" %>
          <%= f.file_field :image, accept: "image/*", class: "col-sm-8" %>
        </div>
        <div class="form-group row">
          <%= f.label :商品名, class: "col-sm-4" %>
          <%= f.text_field :name, class: "form-control col-sm-8" %>
        </div>
        <div class="form-group row">
          <%= f.label :商品説明, class: "col-sm-4" %>
          <%= f.text_area :introduction, class: "form-control col-sm-8" %>
        </div>
        <div class="form-group row">
          <%= f.label :ジャンル, class: "col-sm-4" %>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, option = {include_blank: '--選択してください--'}, class: "form-control col-sm-8" %>
        </div>
        <div class="form-group row">
          <%= f.label :税抜価格, class: "col-sm-4" %>
          <%= f.text_field :price, class: "form-control col-sm-7" %>
          <span class="mt-auto ml-3">円</span>
        </div>
        <div class="form-group row">
          <%= f.label :販売ステータス, class: "ml-3" %>
          <div class="form-check ml-4">
          <%= f.radio_button :is_active, true %>
          <%= f.label :is_active, '販売中' %>
          <%= f.radio_button :is_active, false %>
          <%= f.label :is_active, '販売停止中' %>
         </div>
        </div>
        <div class="form-group row">
          <%= f.submit '変更を保存', class: "btn btn-success mx-auto" %>
        </div>
      </div>
    </div>
  <% end %>
</div>