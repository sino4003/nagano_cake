<div class="container my-5">

  <div class="row">
    <h3 class="border rounded shadow-sm font-weight-bold px-3">注文履歴一覧</h3>
  </div>

  <div class="row mt-5">
    <table class="table table-bordered border-dark">
      <thead>
        <tr class="bg-secondary text-light">
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= link_to order.created_at,admin_order_path(order.id) %></td>
          <td><%= order.customer.full_name %></td>
          <td><%= order.order_details.sum(:amount) %></td>
          <td><%= order.status %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>