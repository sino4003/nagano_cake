<div class="container my-5">

	<div class="row">
    <div class="offset-1">
		  <h2 class="border rounded shadow-sm font-weight-bold px-3">配送先編集</h2>
    </div>
	</div>

  <div class="row mt-3">
    <div class="offset-1 col-4">
      <%= form_with model: @address, url:address_path, method: :PATCH do |f| %>
      <div class="form-group row mt-3">
        <p>郵便番号(ハイフンなし)</p>
        <%= f.text_field :postal_code, class: "form-control offset-1 ml-auto" %>
      </div>
      <div class="form-group row mt-3">
        <p>住所</p>
        <%= f.text_field :address,class: "form-control offset-1 ml-auto" %>
      </div>
      <div class="form-group row mt-3">
        <p>宛名</p>
        <%= f.text_field :name,class: "form-control offset-1 ml-auto" %>
        <%= f.submit '変更内容を保存', class: "btn btn-outline-success mt-5" %>
      </div>
      <% end %>
    </div>
  </div>