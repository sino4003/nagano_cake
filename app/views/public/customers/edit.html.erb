<div class="container my-5">

	<div class="row">
    <div class="offset-1">
		  <h2 class="border rounded shadow-sm font-weight-bold px-3">会員情報編集</h2>
    </div>
	</div>

	<%= form_with model: @customer, url:customers_information_path do |f| %>

  <div class="form-group mt-3">
    <div class="offset-1">
      <div class="form-group mt-3">
        <p>氏名</p>
        <%= f.text_field :last_name %>
        <%= f.text_field :first_name %>
      </div>
      <div class="form-group mt-3">
        <p>フリガナ</p>
        <%= f.text_field :last_name_kana %>
        <%= f.text_field :first_name_kana %>
      </div>
      <div class="form-group mt-3">
        <p>郵便番号</p>
        <%= f.text_field :postal_code %>
      </div>
      <div class="form-group mt-3">
        <p>住所</p>
        <%= f.text_field :address %>
      </div>
      <div class="form-group mt-3">
        <p>電話番号</p>
        <%= f.text_field :telephone_number %>
      </div>
      <div class="form-group mt-3">
        <p>メールアドレス</p>
        <%= f.text_field :email %>
      </div>
      <div class="form-group mt-3">
        <%= f.submit '編集内容を保存', class: "btn btn-outline-success mt-5" %>
        <%= link_to "退会する", customers_confirm_path, class: "btn btn-outline-danger mt-5 ml-5" %>
      </div>
      <% end %>
    </div>
  </div>
</div>