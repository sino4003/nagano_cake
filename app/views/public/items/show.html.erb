<div class="container my-5">
  
  <div class="row">
    <div class="col-4">
      <%= image_tag @item.get_image, size: '300x300', class: "rounded" %>
    </div>
    <div class="col-8 mt-5">
      <div class="row">
        <h2 class="red-border px-3 pb-1"><%= @item.name %></h2>
      </div>
      <div class="row mt-5">
        <p class="ml-5"><%= @item.introduction %></p>
      </div>
      <div class="row mt-5">
        <h4 class="red-border px-5"><%= @item.price %>円(税込)</h4>
      </div>
      <div class="row mt-5 ml-3">
        <%= form_with model: @cart_item, url:cart_items_path do |f| %>
          <%= f.hidden_field :item_id, :value => @item.id %>
          <%= f.select :amount, *[1..99] %><span>個</span>
          <%= f.submit 'カートに入れる', class: "btn btn-outline-success" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
