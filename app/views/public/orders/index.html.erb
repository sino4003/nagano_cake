<div class="container my-5">
  
  <div class='row'>
    <div class-"offset-1">
      <h3 class="border rounded shadow-sm font-weight-bold px-3">注文履歴一覧</h3>
    </div>
  </div>
  
  <div class='row mt-3'>
    <table class='table table-bordered border-dark'>
      <thead>
        <tr class="bg-secondary text-light">
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td class="align-middle"><%= order.created_at %></td>
            <td class="align-middle"><%= "〒" + order.postal_code + "  " + order.address + "  " + order.name %></td>
            <td class="align-middle">
                <% order.order_details.each do |order_detail| %>
                <%= order_detail.item.name %></br>
                <% end %>
            </td>
            <td class="align-middle"><%= order.total_payment %>円</td>
            <td class="align-middle"> <%= order.status %></td>
            <td class="align-middle"><%= link_to "表示する", order_path(order.id), class: "btn btn-sm btn-primary" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>