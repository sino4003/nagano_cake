<div class="container my-5">
  
  <div class="row">
    <div class="offset-1">
      <h3 class="border rounded shadow-sm font-weight-bold px-3">注文履歴詳細</h3>
    </div>
  </div>
  
  <div class="row mt-5">
    <div class="offset-1 col-4">
      <div class="row">
        <strong class="px-3">注文情報</strong>
      </div>
      <div class="row mt-3">
        <table class="table table-bordered border-dark">
          <tbody>
            <tr>
              <td class="bg-secondary text-light">注文日</td>
              <td><%= @order.created_at %></td>
            </tr>
            <tr>
              <td class="bg-secondary text-light">配送先</td>
              <td><%= "〒" + @order.postal_code + "  " + @order.address + "  " + @order.name %></td>
            </tr>
            <tr>
              <td class="bg-secondary text-light">支払い方法</td>
              <td><%= @order.payment_method_i18n %></td>
            </tr>
            <tr>
              <td class="bg-secondary text-light">ステータス</td>
              <td><%= @order.status %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
    <div class="offset-1 col-4">
      <div class="row">
        <strong class="px-3">請求情報</strong>
      </div>
      <div class="row mt-3">
        <table class="table table-bordered border-dark">
          <tbody>
            <tr>
              <td class="bg-secondary text-light">商品合計</td>
              <td><%= @order.order_details.sum(&:subtotal) %></td>
            </tr>
            <tr>
              <td class="bg-secondary text-light">配送料</td>
              <td><%= @order.shipping_cost %></td>
            </tr>
            <tr>
              <td class="bg-secondary text-light">ご請求額</td>
              <td><%= @order.total_payment %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  
  <div class="row mt-5">
    <div class="offset-1 col-9">
      <div class="row">
        <strong class="px-3">注文内容</strong>
      </div>
      <div class="row mt-3">
        <table class="table table-bordered border-dark ">
          <thead>
            <tr class="bg-secondary text-light">
              <th>商品</th>
              <th>単価(税込)</th>
              <th>個数</th>
              <th>小計</th>
            </tr>
          </thead>
          <% @order_detail.each do |order_detail| %>
          <tbody>
            <tr>
              <td><%= order_detail.item.name %></td>
              <td><%= order_detail.item.with_tax_price %></td>
              <td><%= order_detail.amount %></td>
              <td><%= order_detail.subtotal %></td>
            </tr>
          </tbody>
          <% end %>
        </table>
       </div>
    </div>
  </div>
</div>
